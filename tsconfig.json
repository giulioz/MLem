{
  "compilerOptions": {
    // Strictness
    "noImplicitAny": false,
    "noEmitOnError": true,

    "outDir": "build",

    "target": "es2018",
    // Required for Map and console
    "lib": ["es6", "dom"],

    // Required for @types/nearley
    "typeRoots": ["node_modules/@types"],

    // Required if you want to run index.js in node
    "module": "commonjs"
  },
  "include": ["./*"]
}
